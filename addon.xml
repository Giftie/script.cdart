<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.cdart"
       name="cdART Single Shot script"
       version="1.0.0"
       provider-name="giftie">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.pysqlite" version="2.5.6"/>
  </requires>
  <extension point="xbmc.python.library"
             library="default.py" />
  <extension point="xbmc.addon.metadata">
    <summary>cdART Single Shot Script</summary>
    <description>Searches for a match to a single album cdART</description>
    <disclaimer>Needs skin support for it to be used properly</disclaimer>
    <platform>all</platform>
  </extension>
</addon>